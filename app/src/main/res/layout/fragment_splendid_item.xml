<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="140dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:padding="3dp"
        android:layout_height="110dp">

        <ImageView
            android:id="@+id/splendid_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@mipmap/bg_live_default2"/>

        <TextView
            android:id="@+id/splendid_text01"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="直播间"
            android:background="#66151515"
            android:textColor="#f2f0f0"
            android:textSize="10sp"
            android:paddingLeft="4dp"
            android:layout_gravity="bottom"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:padding="3dp"
        android:layout_height="30dp">

        <TextView
            android:id="@+id/splendid_text02"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="name"
            android:textColor="#1a1919"
            android:textSize="12sp"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/splendid_text03"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:gravity="center_vertical"
            android:drawableLeft="@mipmap/gray_eye"
            android:textSize="10sp"
            android:text="播放量"/>

    </FrameLayout>
</LinearLayout>