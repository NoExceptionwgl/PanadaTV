<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#dcdbdb"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/stu_person_fragment_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="35dp">

                <TextView
                    android:id="@+id/stu_person_fragment_person_name"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:text="person_name"
                    android:textSize="14sp"
                    android:singleLine="true"
                    android:gravity="bottom"
                    android:textColor="#181818"/>

                <TextView
                    android:id="@+id/stu_person_fragment_room_id"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="35dp"
                    android:text="room_id"
                    android:textSize="14sp"
                    android:textColor="#181818"/>

            </LinearLayout>

            <TextView
                android:id="@+id/stu_person_fragment_room_person_title"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="person_title"
                android:textColor="#1CD39B"
                android:textSize="12sp"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:drawableLeft="@mipmap/host_playing"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="35dp">

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="35dp"
                    android:text="粉丝:"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/stu_person_fragment_fans_count"
                    android:layout_width="55dp"
                    android:layout_height="35dp"
                    android:text="count"
                    android:textSize="12sp"/>

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="35dp"
                    android:text="身高:"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/stu_person_fragment_height"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:textSize="12sp"
                    android:text="height"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#dcdbdb"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="直播详情"
        android:layout_marginLeft="20dp"
        android:textColor="#181818"
        android:gravity="center_vertical"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dcdbdb"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <TextView
        android:id="@+id/stu_person_fragment_xiangqing"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="详情"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingTop="12dp"
        android:textSize="12sp"/>

</LinearLayout>